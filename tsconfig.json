{
  "compilerOptions": {
    "target": "es2016",
    "rootDir": "./",
    "baseUrl": "./src",
    "outDir": "out-tsc",
    "removeComments": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "declaration": true,
    "lib": ["dom", "dom.iterable", "es2019"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "esModuleInterop": true
    },
    "transpileOnly": true
  },
  "include": ["./src", "./tests"]
}
